<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ej.example.com.helloworld.CalculatorFragment"
    android:id="@+id/calculatorFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="3"
        android:id="@+id/button3"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="49dp" />

    <Button
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="4"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="5"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:text="2" />

    <Button
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="1"
        android:id="@+id/button1"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="6"
        android:id="@+id/button6"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="7"
        android:id="@+id/button7"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="8"
        android:id="@+id/button8"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="9"
        android:id="@+id/button9"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <Button
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="0"
        android:id="@+id/button0"
        android:layout_below="@+id/button8"
        android:layout_alignLeft="@+id/button8"
        android:layout_alignStart="@+id/button8" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="-"
        android:id="@+id/buttonMin"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/button0"
        android:layout_toLeftOf="@+id/buttonDiv"
        android:layout_toStartOf="@+id/buttonDiv" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="/"
        android:id="@+id/buttonDiv"
        android:layout_alignTop="@+id/buttonMin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/buttonPlus"
        android:layout_alignTop="@+id/buttonMin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="="
        android:id="@+id/buttonEqual"
        android:layout_below="@+id/buttonMin"
        android:layout_alignLeft="@+id/button0"
        android:layout_alignStart="@+id/button0" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="*"
        android:id="@+id/buttonMult"
        android:layout_alignTop="@+id/buttonPlus"
        android:layout_toRightOf="@+id/buttonPlus"
        android:layout_toEndOf="@+id/buttonPlus" />

    <Button
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:text="Clear"
        android:id="@+id/buttonClear"
        android:layout_below="@+id/buttonEqual"
        android:layout_alignLeft="@+id/buttonEqual"
        android:layout_alignStart="@+id/buttonEqual" />

</RelativeLayout>
